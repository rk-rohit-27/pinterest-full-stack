<%- include('./partials/header') -%>

   <div class="w-full min-h-screen">
    <div class="cards ml-10 mt-10 flex flex-wrap gap-10">
        <% posts.forEach(function (elem) { %>
            <a href="/show/posts/<%= elem._id %>">
                <div id="card" class="card w-48">
                    <div class="w-50 h-50 bg-zinc-100 rounded-lg overflow-hidden">
                        <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                    </div>
                    <h5 class="mt-2 text-sm">
                        <%= elem.title %>
                    </h5>
                    <h6>@<%= elem.user.username %></h6>
                </div>
            </a>
        <% }) %>
    </div>
</div>


    <%- include('./partials/footer') -%>