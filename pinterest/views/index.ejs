          <form action="/login" method="post">
            <input class="border-2 mt-2 rounded-md block w-full px-3 py-2 " type="text" name="username"
              placeholder="Username">
            <input class="border-2 mt-2 rounded-md  block w-full px-3 py-2 " type="password" name="password"
              placeholder="Password">
            <a class="mt-2 font-semibold text-zinc-500 inline-block " href="#">Forgot password</a>
            <input class="border-2 mt-5 block w-full px-3 py-2 bg-red-600 text-white rounded-full" value="Login"
